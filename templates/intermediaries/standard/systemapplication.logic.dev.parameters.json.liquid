{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logicAppName": {
            "value": "{{ resource_template.resource_name }}"
        },
		"logicAppLocation": {
            "value": "{{ resource_template.parameters.azure_primary_region }}"
        },
        "storageAccountName": {
            "value": "{{ resource_template.parameters.azure_storage_account_name }}"
        },
        "appServicePlanName": {
            "value": "{{ resource_template.parameters.azure_app_service_plan_name }}"
        },
		"messageBusResourceGroupName": {
            "value": "{{ resource_template.parameters.azure_message_bus_resource_group_name }}"
        },
		"serviceBusResourceGroupName": {
			"value": "{{ resource_template.parameters.azure_service_bus_resource_group_name }}"
		},
		"serviceBusNamespaceName": {
			"value": "{{ resource_template.parameters.azure_service_bus_namespace_name }}"
		},
		"serviceBusPublishPolicyName": {
			"value": "RootManageSharedAccessKey"
		},
		"serviceBusSubscribePolicyName": {
			"value": "RootManageSharedAccessKey"
		},
		"appInsightsName": {
            "value": "{{ resource_template.parameters.app_insights_name }}"
        },
		"apimServiceName": {
            "value": "{{ resource_template.parameters.apim_service_name }}"
        },
		"serviceBusSubscribeApiConnectionName": {
			"value": "{{ resource_template.parameters.service_bus_api_connection_name }}"
		},
        "tags": {
            "value": {
{%- for tag in resource_template.tags -%}
    {%- if forloop.last == false %}
                "{{ tag.key }}" : "{{ tag.value }}",
    {%- else %}
                "{{ tag.key }}" : "{{ tag.value }}"
    {%- endif -%}
{%- endfor %}
            }
        }
    }
}