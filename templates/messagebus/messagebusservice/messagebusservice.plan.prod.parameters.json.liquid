{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServicePlanName": {
            "value": "{{ resource_template.resource_name }}"
        },
        "appServicePlanLocation": {
            "value": "{{ resource_template.parameters.azure_primary_region }}"
        },
        "sku": {
            "value": "{{ resource_template.parameters.azure_sku }}"
        },
        "skuTier": {
            "value": "{{ resource_template.parameters.azure_sku_tier }}"
        },
        "skuCapacity": {
            "value": {{ resource_template.parameters.azure_sku_capacity }}
        },
        "tags": {
            "value": {
{%- for tag in resource_template.tags -%}
    {%- if forloop.last == false %}
                "{{ tag.key }}" : "{{ tag.value }}",
    {%- else %}
                "{{ tag.key }}" : "{{ tag.value }}"
    {%- endif -%}
{%- endfor %}
            }
        }
    }
}